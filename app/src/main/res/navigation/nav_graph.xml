<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.store.example.screens.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.store.example.screens.product.ProductFragment"
        android:label="ProductFragment" >
        <argument
            android:name="product"
            app:argType="string[]" />
        <action
            android:id="@+id/action_productFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>